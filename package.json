{
  "name": "eclesia-worship",
  "version": "1.0.0",
  "description": "Web app that syncs with a shared Dropbox folder to manage and present songs.",
  "main": "server_dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node server_dist/server.js",
    "server": "tsc -p tsconfig.json && tsc -p tsconfig.json -w | nodemon server_dist/server/server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "cd client && npm run build",
    "build": "npm run build:server && npm run build:client",
    "build:digitalocean": "npm install --production=false && cd client && npm install --production=false && cd ../ && npm run build && npm ci"
  },
  "author": "Mathias Onu, Denis Onu",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chordproject-parser": "^0.2.14",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dropbox": "^10.34.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "mdb-reader": "^3.0.0",
    "mongoose": ">=6.11.3",
    "node-fetch": "^3.3.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.16",
    "@types/dotenv": "^8.2.0",
    "@types/dropbox-chooser": "^1.0.7",
    "@types/express": "^4.17.21",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.9.1",
    "concurrently": "^7.6.0",
    "nodemon": "^3.0.1",
    "typescript": "~4.9.4"
  }
}
